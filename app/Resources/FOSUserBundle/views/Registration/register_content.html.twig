{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="well">
            <form name="fos_user_registration_form" method="post" action="{{ path('fos_user_registration_register') }}"
                  class="login-form">
                <fieldset>
                    <legend><i class="fa fa-lock" aria-hidden="true"></i> Регистрация</legend>

                    <div class="form-group">
                        <label for="username">Login</label>
                        <input type="text" id="fos_user_registration_form_username"
                               name="fos_user_registration_form[username]" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="username">Email</label>
                        <input type="text" id="fos_user_registration_form_email"
                               name="fos_user_registration_form[email]" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Пароль</label>
                        <input type="password" id="fos_user_registration_form_plainPassword_first"
                               name="fos_user_registration_form[plainPassword][first]" class="form-control"/>
                    </div>

                    <div class="form-group">
                        <label for="password">Повторите пароль</label>
                        <input type="password" id="fos_user_registration_form_plainPassword_second"
                               name="fos_user_registration_form[plainPassword][second]" class="form-control"/>
                    </div>

                    {% if form._token.vars.value %}
                        <input type="hidden" name="fos_user_registration_form[_token]" value="{{ form._token.vars.value }}"/>
                    {% endif %}

                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-sign-in" aria-hidden="true"></i> Зарегистрироваться
                    </button>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

