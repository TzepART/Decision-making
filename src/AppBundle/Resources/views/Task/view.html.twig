{% extends 'base.html.twig' %}

{% block body %}
    <h2>
        {{ task.name }}
    </h2>
    {% set variants = task.variants %}

    {% for form in criteria_forms %}
        {% set criteria = form.vars.value %}
        <h3>{{ criteria.name }}</h3>
        <div class="row">
            <div class="col-md-6">
            {{ form_start(form) }}
                <div class="form-group">
                    <label for="criteria_significance">Значимость критерия:   </label>
                    <input type="text" class="form-control" id="criteria_significance" name="criteria[significance]" value="{{ criteria.significance }}">
                </div>
                <table class="table table-condensed table-bordered col-md-6 matrix">
                    <tr>
                        <td></td>
                        {% for variant in variants %}
                            <td>
                                {{ variant.name }}
                            </td>
                        {% endfor %}
                    </tr>
                    {% for row in criteria.matrix.toArray %}
                        {% set row_id = loop.index0 %}
                        <tr>
                            <td>
                                {{ variants[row_id].name }}
                            </td>
                            {% for value in row %}
                                <td>
                                    <input type="text" id="criteria_matrix_{{ row_id }}_{{ loop.index0 }}" name="criteria[matrix][{{ row_id }}][{{ loop.index0 }}]" value="{{ value }}">
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </table>
            {{ form_end(form) }}
            </div>
        </div>
    {% endfor %}

{% endblock %}

